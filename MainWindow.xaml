<Window x:Class="VacancyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacancyConverter"
        mc:Ignorable="d"
        Title="VacancyConverter" Height="600" Width="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Content="{TemplateBinding Content}"
                                ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004d84"/>
                                <Setter TargetName="contentPresenter" Property="Margin" Value="15,9,15,7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#cccccc"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
        </Style>

        <Style x:Key="DocumentListStyle" TargetType="ListBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dddddd"/>
            <Setter Property="Background" Value="#fafafa"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="DocumentItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            >
                            <ContentPresenter x:Name="contentPresenter"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Content="{TemplateBinding Content}"
                                ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f8ff"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e6f3ff"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007acc"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="SelectFileBtn"
                        Content="📄 Выберите файл"
                        Style="{StaticResource ModernButton}"
                        Width="170" Height="36"
                        Margin="0,0,12,0" 
                        Click="SelectFileBtn_Click"
                    />
                    
                    <Button x:Name="SelectFolderBtn"
                        Content="📁 Выберите папку"
                        Style="{StaticResource ModernButton}"
                        Width="170" Height="36"
                        Margin="0,0,12,0"
                        Click="SelectFolderBtn_Click"
                    />    
                </StackPanel>
    
                <StackPanel x:Name="ExportButtonPanel" Orientation="Horizontal" Visibility="Collapsed">
                    
                    <Button x:Name="ExportSingleBtn"
                        Content="💾 Экспорт"
                        Style="{StaticResource SecondaryButton}"
                        Width="150" Height="36"
                        Margin="0,0,12,0"
                        Click="ExportSingleBtn_Click"/>
                    
                    <Popup x:Name="ExportPopup"
                        Placement="Bottom"
                        PlacementTarget="{Binding ElementName=ExportSingleBtn}"
                        StaysOpen="False">
                        <Border Background="White">
                            <StackPanel Orientation="Vertical">
                                <Button 
                                    Content="TXT" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Width="150" Height="36" 
                                    Margin="0,0,12,0"
                                    Click="ExportSingleToTxtBtn_Click" />
                                <Button 
                                    Content="JSON" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Width="150" Height="36" 
                                    Margin="0,0,12,0"
                                    Click="ExportSingleToJsonBtn_Click" />
                                <Button 
                                    Content="XML" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Width="150" Height="36" 
                                    Margin="0,0,12,0"
                                    Click="ExportSingleToXmlBtn_Click" />
                            </StackPanel>
                        </Border>
                    </Popup>

                    <Button x:Name="ExportAllBtn"
                        Content="💾 Экспортировать все"
                        Style="{StaticResource SecondaryButton}"
                        Width="175" Height="36"
                        Margin="0,0,12,0"
                        Click="ExportAllBtn_Click"/>
                    
                        <Popup x:Name="ExportAllPopup"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=ExportAllBtn}"
                            StaysOpen="False">
                            <Border Background="White">
                                <StackPanel Orientation="Vertical">
                                    <Button 
                                        Content="TXT" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="175" Height="36" 
                                        Margin="0,0,12,0"
                                        Click="ExportAllToTxtBtn_Click" />
                                    <Button 
                                        Content="JSON" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="175" Height="36" 
                                        Margin="0,0,12,0"
                                        Click="ExportAllToJsonBtn_Click" />
                                    <Button 
                                        Content="XML" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="175" Height="36" 
                                        Margin="0,0,12,0"
                                        Click="ExportAllToXmlBtn_Click" />
                                </StackPanel>
                            </Border>
                        </Popup>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="7*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" Margin="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="DocumentsListHeader"
                        Text="Документы"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Foreground="#333333"
                        Margin="0,0,0,12" 
                    />

                    <ListBox x:Name="DocumentsList"
                        Grid.Row="1"
                        Style="{StaticResource DocumentListStyle}"
                        ItemContainerStyle="{StaticResource DocumentItemStyle}"
                        SelectionChanged="OnDocumentSelected">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                        TextWrapping="Wrap"
                                        FontWeight="SemiBold"
                                        Foreground="#333333"/>
                                    <TextBlock Text="{Binding FileName}"
                                        TextWrapping="Wrap"
                                        FontSize="11"
                                        Foreground="#666666"
                                        Margin="0,2,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                HorizontalAlignment="Stretch"
                Background="#e0e0e0"
                Width="1"
                ShowsPreview="True"/>
            
            <Border Grid.Column="2" Background="White" Margin="15,15,15,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                        BorderThickness="1"
                        BorderBrush="#e0e0e0"
                        Background="#fcfcfc"
                        CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                            <TextBlock x:Name="ContentText"
                                TextWrapping="Wrap"
                                TextAlignment="Left"
                                FontSize="13"
                                LineHeight="18"
                                Foreground="#444444"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
